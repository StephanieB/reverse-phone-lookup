{{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Nom'|trans, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.name, {'attr': {'class': 'form-control has-feedback-left'}}) }}
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group">
        {{ form_label(form.phone, 'Téléphone'|trans, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control has-feedback-left'}}) }}
            <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
            {{ form_errors(form.phone) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-xs-offset-3">
            <button class="btn btn-success">{{ button_label|default('Sauvegarder'|trans) }}</button>
        </div>
    </div>
{{ form_end(form) }}

<a href="{{ path('users_phone_index') }}">
    <i class="fa fa-angle-left"></i>
    {{ "Retour à la liste"|trans }}
</a>
