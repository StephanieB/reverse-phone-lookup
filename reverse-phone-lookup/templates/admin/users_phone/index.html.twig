{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('gentelella/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('gentelella/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('gentelella/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('gentelella/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('gentelella/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}{{ "Annuaire"|trans }}{% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>{{ "Liste des personnes inscrites"|trans }}
                    <small>
                        <a class="btn btn-default buttons-copy buttons-html5 btn-sm" href="{{ path('users_phone_new') }}">
                            {{ "Créer une nouvelle entrée"|trans }}
                        </a>
                    </small>
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid">
                    <thead>
                        <tr>
                            <th class="sorting_asc">{{ 'Id'|trans }}</th>
                            <th class="sorting">{{ "Nom"|trans }}</th>
                            <th class="sorting">{{ "Téléphone"|trans }}</th>
                            <th class="sorting">{{ "Actions"|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for users_phone in users_phone %}
                        <tr>
                            <td>{{ users_phone.id }}</td>
                            <td>{{ users_phone.name }}</td>
                            <td>{{ users_phone.phone }}</td>
                            <td>
                                <a href="{{ path('users_phone_edit', {'id': users_phone.id}) }}" style="margin-right: 10px;">{{ "Modifier"|trans }}</a>
                                {{ include('admin/users_phone/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">{{ "Il n'y a aucun élément dans l'annuaire"|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
